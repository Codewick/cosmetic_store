      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= form.label :content %>
    <br>
    <%= form.text_area :content,
      :placeholder => "Enter content...", id: :review_content %>
  </div>

  <div class="form-group row">
     <%= form.label :"Enter rating (1-5):", class: 'col-sm-2 form-control-label' %>
     <div class="col-sm-6">
       <%= form.number_field :rating %>
     </div>
   </div>

  <div class="field">
    <%#= form.label :user_id %>
    <%= form.hidden_field :user_id, :value => current_user.id, id: :review_user_id%>
  </div>
<br>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
